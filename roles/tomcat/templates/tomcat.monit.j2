check process tomcat matching "{{pattern}}"
    start program = "{{start_program}}"
    stop program = "{{stop_program}}"
    if does not exist 5 cycles then restart
    if cpu usage > 25% for 5 cycles then alert
    if memory usage > 25% for 5 cycles then restart
    if children > 25 for 3 cycles then restart
    if 3 restarts within 5 cycles then timeout

check host {{myrole}} with address 127.0.0.1
    if failed port 8080 protocol http
    and request /{{myrole}}/date.jsp with content = "Today is "
    for 10 cycles then alert
